# Environment
ENVIRONMENT=development
DEBUG=true

# API Keys / LLM Provider
LLM_PROVIDER=gemini  # "anthropic" or "gemini"
ANTHROPIC_API_KEY=your-api-key-here
GEMINI_API_KEY=your-gemini-key-here

# Search APIs (for Research Agent)
TAVILY_API_KEY=your-tavily-key  # Primary search (recommended)
GOOGLE_SEARCH_API_KEY=          # Fallback search
GOOGLE_SEARCH_ENGINE_ID=        # Fallback search

# PostgreSQL
DATABASE_URL=postgresql+asyncpg://briefly:briefly@localhost:5432/briefly

# DynamoDB (local)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=local
AWS_SECRET_ACCESS_KEY=local
DYNAMODB_ENDPOINT_URL=http://localhost:8000

# App Settings
APP_NAME=Briefly
API_V1_PREFIX=/api/v1
